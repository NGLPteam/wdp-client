{
  "extends": "@wdp/tsconfig/config.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/relay/*": ["__generated__/*"],
      "@/types/*": ["types/*"],
      "@/components/*": ["components/*"],
      "@/lib/*": ["lib/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules", "./_pages"]
}
